# /docker-stack/.env

# --- Configurações Gerais ---
# Substitua pelo seu domínio principal.
DOMAIN=seu-dominio.com
# Email para o registro do certificado Let's Encrypt.
ACME_EMAIL=seu-email@seu-dominio.com
# Timezone para os contêineres.
TZ=America/Sao_Paulo

# --- Configurações do Authentik ---
# Use o comando 'openssl rand -base64 36' para gerar senhas e chaves seguras.
AUTHENTIK_SECRET_KEY=GERAR_UMA_CHAVE_SECRETA_FORTE
AUTHENTIK_POSTGRES_USER=authentik
AUTHENTIK_POSTGRES_PASSWORD=GERAR_UMA_SENHA_SEGURA_PARA_O_DB
AUTHENTIK_POSTGRES_DB=authentik

# --- Configurações do Guacamole ---
GUACAMOLE_DB_USER=guacamole
GUACAMOLE_DB_PASSWORD=GERAR_OUTRA_SENHA_SEGURA_PARA_O_DB
GUACAMOLE_DB_NAME=guacamole

